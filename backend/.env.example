# Noor Islamic App - Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ================================
# Server Configuration
# ================================
PORT=5000
NODE_ENV=development

# ================================
# MongoDB Database
# ================================
# MongoDB Atlas connection string
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGO_URI=your_mongodb_connection_string

# ================================
# JWT Authentication
# ================================
# Use a strong, random secret key for JWT token signing
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here

# ================================
# External APIs
# ================================
# Aladhan API for Islamic prayer times and calendar
# Default: https://api.aladhan.com/v1
ALADHAN_API=https://api.aladhan.com/v1

# Google Maps API Key (optional - for advanced location services)
GOOGLE_API_KEY=your_google_maps_api_key

# ================================
# Notification Services (Optional)
# ================================
# Firebase Cloud Messaging for push notifications
FCM_SERVER_KEY=your_fcm_server_key

# ================================
# Email Service (Optional)
# ================================
# For password reset and notifications
EMAIL_FROM=noor@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ================================
# File Upload (Optional)
# ================================
# AWS S3 for file storage (user avatars, audio files, etc.)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region
AWS_BUCKET_NAME=your_s3_bucket_name

# ================================
# Rate Limiting & Security
# ================================
# Maximum requests per 15 minutes per IP
RATE_LIMIT_MAX=100

# CORS allowed origins (comma-separated for multiple origins)
CORS_ORIGINS=exp://localhost:19000,exp://192.168.*:19000,http://localhost:19006

# ================================
# Caching (Optional)
# ================================
# Redis for caching prayer times and frequently accessed data
REDIS_URL=redis://localhost:6379

# ================================
# Development & Debugging
# ================================
# Set to 'true' to enable detailed logging
DEBUG_MODE=false

# Set to 'true' to enable API documentation
ENABLE_DOCS=true
